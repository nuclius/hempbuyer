<script type="text/javascript">
$(document).ready(function(){
    $(document).on("submit", "#signmeup_form", function(e){
        e.preventDefault();
        var email = $("#email").val();
        console.log('email', email);
        if(email.trim() != '') {
            var Obj = {
                cg_email: email
            };
            $("#signmeup_form").find(".parsley-errors-list").html('');
            $.ajax({
                type: "POST",
                url: "{$config.url}/user/subscribe",
                data: Obj,
                success: function (data) {
                    if(data.status == 400) {
                        $("#signmeup_form").find(".parsley-errors-list").html('<li class="parsley-type">'+data.message+'</li>');
                        $("#email").focus();
                    } else {
                        $("#email").val("");
                        swal('Subscription is successfully.');
                    }
                }
            });
        }
    });

    $('.howworks').click(function(){
        $('html, body').animate({
            scrollTop: $("#howworksSec").offset().top
        }, 1000);
    });

});

getAds();
function getAds() {
    var Obj = {
        page: 'home'
    };
    $.ajax({
        type: "POST",
        url: "{$config.url}/get_ads",
        data: Obj,
        success: function (data) {
            $("#ads_list").html(data)
        }
    });
}
</script>
